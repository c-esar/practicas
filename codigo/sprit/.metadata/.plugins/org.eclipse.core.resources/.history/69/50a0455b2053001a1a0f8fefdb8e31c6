package com.konrad.edu.dao;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

import com.konrad.edu.entity.Perfil;


public interface IPerfilDao extends CrudRepository<Perfil,Long>{

	@Query(value="select u from hc_perfiles where u.nom_usuario = ?1 and u.password = ?2")
	public Boolean findHcPerfilesByNomusuarioAndPassword(String nom_usuario, String password);
}
