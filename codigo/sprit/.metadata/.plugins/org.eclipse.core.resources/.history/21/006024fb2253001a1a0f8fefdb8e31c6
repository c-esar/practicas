package com.konrad.edu.dao;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;

import com.konrad.edu.entity.Perfil;


public interface IPerfilDao extends CrudRepository<Perfil,Long>{

	@Query(value="select u from hc_perfiles u where u.nom_usuario = :nom_usuario and u.password = :password")
	public Boolean findHcPerfilesByNomusuarioAndPassword(@Param("nom_usuario")String nom_usuario, @Param("password")String password);
}
