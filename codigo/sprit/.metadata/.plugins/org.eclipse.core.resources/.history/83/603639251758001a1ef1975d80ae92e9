package com.konrad.edu.dao;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

import com.konrad.edu.entity.PersonaEntity;
import com.konrad.edu.entity.TipoDocumentoEntity;

public interface IPersonaDao extends CrudRepository<PersonaEntity, Long> {

	@Query(value = "select seq_tipo_documento,cod_documento,sigla_documento,nom_documento from HC_Historias.dbo.hc_tipodocumento", nativeQuery = true)
	public List<TipoDocumentoEntity> findAllTipoDocumento();
}
